<div class="calendar container">
  <h1 class="section-title" align="center">Events</h1>
    <div id="articles">
      <h2 id="month">
        <%= link_to "<", date: @date.prev_month %>
        <%= @date.strftime("%B %Y") %>
        <%= link_to ">", date: @date.next_month %>
      </h2>
      <%= calendar @date do |date| %>
        <%= date.day %>
        <% if @events_by_date[date] %>
          <ul>
            <% @events_by_date[date].each do |event| %>
              <li><%= link_to "#{event.events}", event %></li>
            <% end %>
          </ul>
        <% end %>
      <% end %>
    </div>
    <br>
    <%= link_to 'Add an Event', new_event_path, class: "btn btn-block btn-success" %>
    </table>
</div>