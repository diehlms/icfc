<div id="comment-form">
    <%= form_for @comment do |f| %>
        <%= render 'layouts/error_messages', object: @comment %>
        <%= trix_editor :comment, :content, required: true, placeholder: "limit: 1000 characters" %>
        <%= f.hidden_field :article_id %>
        <br>
        <%= f.submit "post comment", class: 'btn btn-success' %>
    <% end %>
</div>