
  <% if @event %>
    <div class="container">
      <div class="event-card">
        <div class="event card-header">
          <h3 class="section-title"><%= @event.events %></h3>
        <div class="event card-body">
          <h6><strong>Location:</strong></h6>
          <p><%= @event.location %></p>
          <br>
          <h6><strong>Description:</strong></h6>
          <p><%= @event.description.html_safe %></p>
          <div class="card-times">
            <strong><p>
              From:
            <%= @event.start_time  %>
            <% if @event.end_time %> 
              to: 
              <%= @event.end_time  %>
            <% end %>
            </p></strong>
          </div>
        </div>
      </div>
    </div>
    <% if current_user.admin? || current_user.id == @event.user_id%>
      <div class="UIactions">
        <span class="a"><%= link_to 'Edit', edit_event_path(@event), class: "btn btn-primary" %></span>
        <span class="a"><%= button_to 'Delete', event_path(@event), method: :delete, data: {confirm: 'are you sure?'}, class: "btn btn-danger" %></span>
      </div>
    <% end %>
  <% end %>
