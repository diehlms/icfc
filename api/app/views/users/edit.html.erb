<% if current_user.id == @user.id %>
    <div class="container">
        <h1>Edit information</h1>
        <div class="container user-form col-sm-offset-1">
            <%= form_with(model: @user, local: true) do |form| %>
            <%= render 'layouts/error_messages', object: @user %>
            <div class="row">
                <div class="col-sm-3 user-names">
                    <%= form.label :username %>
                    <%= form.text_field :username, cols: "15", class: "form-control"  %>
                </div>
                <div class="col-sm-3 user-names">
                    <%= form.label :firstname, "First Name" %>
                    <%= form.text_field :firstname, class: "form-control"  %>
                </div>
                <div class="col-sm-3 user-names">
                    <%= form.label :lastname, "Last Name" %>
                    <%= form.text_field :lastname, class: "form-control"  %>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-5 user-contact">
                    <%= form.label :email %>
                    <%= form.text_field :email, class: "form-control"  %>
                </div>
                <div class="col-sm-4 user-contact">
                    <%= form.label :phone_number %>
                    <%= form.text_field :phone_number, placeholder: "(XXX) XXX-XXXX", class: "form-control"  %>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-sm-9" align="center">
                    <%= form.submit("Update account", class: 'btn btn-success btn-block') %>
                    <% if !logged_in? && !current_user %>
                        <p>Have an account? <%= link_to "Sign in here", login_path %></p>
                    <% end %>
                </div>
            </div>
            <% end %>
        </div>
    </div>
<% else %>
    <div class="container">
        <strong>You are not allowed to edit this user's information</strong>
    </div>
<% end %>
